{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'security.login.title'|trans }}</h3>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="panel-body">
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" name="_username" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" type="password" value="" required>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox" value="Remember Me">{{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-success btn-block">{{ 'security.login.submit'|trans }}</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
